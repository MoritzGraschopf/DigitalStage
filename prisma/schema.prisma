generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ConferenceStatus {
  SCHEDULED
  ACTIVE
  ENDED
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum Role {
  ORGANIZER
  PARTICIPANT
  VIEWER
}

model User {
  id           Int    @id @default(autoincrement())
  firstName    String @default("")
  lastName     String @default("")
  email        String @unique
  passwordHash String

  organizedConferences Conference[]     @relation("Organizer")
  chatMessages         ChatMessage[]
  participations       UserConference[]
}

model Conference {
  id          Int              @id @default(autoincrement())
  title       String
  description String?
  startAt     DateTime?
  endDate     DateTime?
  status      ConferenceStatus @default(SCHEDULED)
  link        String           @unique
  organizerId Int
  Organizer   User             @relation("Organizer", fields: [organizerId], references: [id], onDelete: Cascade)

  chatMessages ChatMessage[]
  participants UserConference[]

  @@index([organizerId])
  @@index([status])
}

model ChatMessage {
  id           Int        @id @default(autoincrement())
  message      String
  userId       Int
  conferenceId Int
  user         User       @relation(fields: [userId], references: [id])
  conference   Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
}

model UserConference {
  userId       Int
  conferenceId Int
  role         Role

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  conference Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)

  @@id([userId, conferenceId])
  @@index([conferenceId])
}
