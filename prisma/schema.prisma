generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ConferenceStatus {
  SCHEDULED
  ACTIVE
  ENDED
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum Role {
  ORGANIZER
  PARTICIPANT
  VIEWER
}

model User {
  id             Int              @id @default(autoincrement())
  name           String           @default("")
  email          String           @unique
  passwordHash   String
  conferences    Conference[]     @relation("Organizer")
  chatMessages   ChatMessage[]
  participations UserConference[]
}

model Conference {
  id                    Int              @id @default(autoincrement())
  title                 String
  description           String?
  startDate             DateTime?
  endDate               DateTime?
  status                ConferenceStatus @default(SCHEDULED)
  link                  String           @unique
  participationPassword String?
  userId                Int
  user                  User             @relation("Organizer", fields: [userId], references: [id])
  chatMessages          ChatMessage[]
  invitations           Invitation[]
  participants          UserConference[]
}

model ChatMessage {
  id           Int        @id @default(autoincrement())
  message      String
  userId       Int
  conferenceId Int
  user         User       @relation(fields: [userId], references: [id])
  conference   Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
}

model Invitation {
  id           Int              @id @default(autoincrement())
  email        String
  status       InvitationStatus
  conferenceId Int
  conference   Conference       @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
}

model UserConference {
  userId       Int
  conferenceId Int
  role         Role

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  conference Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)

  @@id([userId, conferenceId])
}
