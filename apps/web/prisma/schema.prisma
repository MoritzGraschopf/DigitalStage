generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ConferenceStatus {
  SCHEDULED
  ACTIVE
  ENDED
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum Role {
  ORGANIZER
  PARTICIPANT
  VIEWER
}

model User {
  id           String @id @default(uuid())
  firstName    String @default("")
  lastName     String @default("")
  email        String @unique
  passwordHash String

  organizedConferences Conference[]     @relation("Organizer")
  chatMessages         ChatMessage[]
  participations       UserConference[]
  settings             UserSettings?
}

model UserSettings {
  userId String @id
  user   User   @relation(fields: [userId], references: [id])

  // UI / Verhalten
  locale      String  @default("de-AT")
  timezone    String  @default("Europe/Vienna")
  autoplayHls Boolean @default(true)

  // Benachrichtigungen
  notifyChatToasts  Boolean @default(true)
  notifyConfCreated Boolean @default(true)

  // Technisch
  wsReconnect Boolean  @default(true)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Conference {
  id          String           @id @default(uuid())
  title       String
  description String?
  startAt     DateTime?
  endDate     DateTime?
  status      ConferenceStatus @default(SCHEDULED)
  link        String           @unique
  organizerId String
  Organizer   User             @relation("Organizer", fields: [organizerId], references: [id], onDelete: Cascade)

  chatMessages ChatMessage[]
  participants UserConference[]

  @@index([organizerId])
  @@index([status])
}

model ChatMessage {
  id           String     @id @default(uuid())
  message      String
  userId       String
  conferenceId String
  user         User       @relation(fields: [userId], references: [id])
  conference   Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
}

model UserConference {
  userId       String
  conferenceId String
  role         Role

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  conference Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)

  @@id([userId, conferenceId])
  @@index([conferenceId])
}
